@using Bakery.Models;

<h3>Vendors</h3>
@if (Model.Count == 0)
{
  <p>There are no vendors entered.</p>
}
<ul>
  @foreach (Vendor vendor in Model)
  {
    <li><a href='/vendors/@vendor.Id'>@vendor.VendorName</a></li>
  }
</ul>

<p><a href="/vendors/new">Add a new vendor</a></p>

<p><a href="/">Home</a></p>