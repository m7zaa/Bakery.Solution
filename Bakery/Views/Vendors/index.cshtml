@using Bakery.Models;

<!DOCTYPE html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
        <link rel="stylesheet" type="text/css" media="screen" href="~/css/styles.css">
        <title>Vendors</title>
    </head>
    <body>
        <div class = "container">

            <h3>Vendors</h3>
            @if (Model.Count == 0)
            {
            <p>There are no vendors entered.</p>
            }
            <ul>
            @foreach (Vendor vendor in Model)
            {
                <li><a href='/vendors/@vendor.Id'>@vendor.VendorName</a></li>
            }
            </ul>

            <p><a href="/vendors/new">Add a new vendor</a></p>
            <p><a href="/">Home</a></p>

        </div>
    </body>
</html>